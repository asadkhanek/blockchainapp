{
  "name": "blockchain-app",
  "version": "1.0.0",
  "description": "A comprehensive blockchain web application",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "test": "jest",
    "test:unit": "jest --selectProjects=unit",
    "test:controllers": "jest --selectProjects=controllers",
    "test:integration": "jest --selectProjects=integration",
    "test:performance": "jest --selectProjects=performance",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:security": "jest --testPathPattern=tests/security",
    "test:usability": "jest --testPathPattern=tests/usability",
    "test:compliance": "jest --testPathPattern=tests/security/compliance.test.js",
    "test:deployment": "jest --testPathPattern=tests/deployment",
    "test:notifications": "jest --testPathPattern=tests/controllers/notifications.test.js",
    "test:ui": "jest --testPathPattern=tests/usability/user-interface.test.js",
    "test:accessibility": "jest --testPathPattern=tests/usability/accessibility.test.js",
    "test:report": "node scripts/generate-test-report.js",
    "test:frontend": "cd client && npm test",
    "test:frontend:coverage": "cd client && npm run test:coverage",
    "test:frontend:components": "cd client && npm run test:components",
    "test:frontend:e2e": "cd client && npm run test:cypress",
    "test:all": "npm run test && npm run test:frontend",
    "test:ci": "npm run test && npm run test:frontend:coverage && npm run test:frontend:e2e",
    "lint": "eslint . && cd client && npm run lint"
  },
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "web3",
    "cryptography",
    "wallet"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "elliptic": "^6.5.4",
    "express": "^4.21.2",
    "express-validator": "^6.15.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "qrcode": "^1.5.1",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "axe-puppeteer": "^1.1.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.5.0",
    "jest-axe": "^8.0.0",
    "nodemon": "^2.0.22",
    "puppeteer": "^20.0.0",
    "redis-mock": "^0.56.3",
    "supertest": "^6.3.3"
  }
}
